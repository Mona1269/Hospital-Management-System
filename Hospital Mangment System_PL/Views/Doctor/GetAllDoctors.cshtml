@using Hospital_Mangment_System_BLL.View_model.DoctorVM
@model List<GetAllDoctorVM>
@{
    ViewData["Title"] = "List of Doctors";
}

<h2>List of Doctors</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Birthday</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.UserName</td>
                    <td>@doctor.Email</td>
                    <td>@doctor.Birthday.ToString("yyyy-MM-dd")</td>
                    <td>@doctor.Phone</td>
                    <td>@(doctor.Gender == 'M' ? "Male" : "Female")</td>
                    <td>
                        @* <a asp-action="GetDoctorById" asp-route-id="@doctor.Id" class="btn btn-info">Details</a>
                        <a asp-action="UpdateDoctor" asp-route-id="@doctor.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteDoctor" asp-route-id="@doctor.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</a>
                    *@ </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No doctors available</td>
            </tr>
        }
    </tbody>
</table>

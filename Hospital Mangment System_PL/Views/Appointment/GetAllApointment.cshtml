@model IEnumerable<Hospital_Mangment_System_BLL.View_model.AppointmentVM.GetAppointmentByIDVM>

@{
    ViewBag.Title = "All Appointments";
}

<div class="container mt-5">
    <h2 class="text-center">All Appointments</h2>

    @if (Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Appointment ID</th>
                    <th scope="col">Patient_Id</th>
                    <th scope="col">Date</th>
                    <th scope="col">Reason_Of_Visit</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Appointment_Id</td>
                        <td>@appointment.Patient_Id</td>
                        <td>@appointment.Date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@appointment.Reason_Of_Visit</td>
                        <td>
                            <a asp-action="GetAppointmentById" asp-route-id="@appointment.Appointment_Id" class="btn btn-info btn-sm">View</a>
                            <a asp-action="UpdateAppointment" asp-route-id="@appointment.Appointment_Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="DeleteAppointment" asp-route-id="@appointment.Appointment_Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this appointment?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No appointments found.
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="AddAppointment" class="btn btn-primary">Add New Appointment</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model Hospital_Mangment_System_BLL.View_model.AppointmentVM.GetAppointmentByIDVM

@{
    ViewBag.Title = "Delete Appointment";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Appointment</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Delete Confirmation</h5>
        </div>
        <div class="card-body">
            <h6 class="card-title">Appointment Details</h6>
            <p><strong>Patient ID:</strong> @Model.patient_id</p>
            <p><strong>Date:</strong> @Model.Date.ToString("g")</p>
            <p><strong>Reason:</strong> @Model.Reason_Of_Visit</p>
            <hr />
            <p class="text-danger font-weight-bold">Are you sure you want to delete this appointment?</p>
        </div>
        <div class="card-footer text-center">
            <form asp-action="DeleteAppointment" method="post">
                <input type="hidden" name="id" value="@Model.Appointment_Id" />
                <button type="submit" class="btn btn-danger btn-lg">Delete Appointment</button>
                <a asp-action="GetAllAppointment" class="btn btn-secondary btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


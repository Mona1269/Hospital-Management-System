@model IEnumerable<Hospital_Mangment_System_BLL.View_model.AppointmentVM.GetAllAppointmentVM>

@{
    ViewBag.Title = "Appointments Index";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Appointments Management</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Manage Your Appointments</h5>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a asp-action="AddAppointment" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Add New Appointment
                </a>
            </div>

            @if (Model.Any())
            {
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Paient_Id</th>
                            <th>Date</th>
                            <th>Reason_Of_Visit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var appointment = Model.ElementAt(i);
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@appointment.Patient_Id</td>
                                <td>@appointment.Date.ToString("g")</td>
                                <td>@appointment.Reason_Of_Visit</td>
                                <td>
                                    <a asp-action="GetAppointmentById" asp-route-id="@appointment.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="UpdateAppointment" asp-route-id="@appointment.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="DeleteAppointment" asp-route-id="@appointment.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this appointment?');">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <strong>No appointments found!</strong> Please add some appointments.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

